{
  "name": "imphnen",
  "private": true,
  "scripts": {
    "dev": "cross-env dotenv -- turbo run dev --env-mode=loose",
    "build": "cross-env dotenv -- turbo run build --env-mode=loose",
    "start": "cross-env dotenv -- turbo run start --env-mode=loose",
    "lint": "cross-env dotenv -- turbo run lint --env-mode=loose",
    "test": "cross-env dotenv -- turbo run test --env-mode=loose",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "check-deps": "sherif --fix"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "prettier": "^3.6.2",
    "sherif": "^1.6.1",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
